<div class="col-md-12">
  <table class="table table-hover">
    <thead>
    <tr>
      <td>#</td>
      <td>Title</td>
      <td>作者</td>
      <td>Manage</td>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td>
          <% if post.is_display %>
            <%= link_to("hide", set_as_hide_admin_post_path(post), :method => :post, class: "btn btn-sm btn-warning") %>
        <% else %>
            <%= link_to("display", set_as_display_admin_post_path(post), :method => :post, class: "btn btn-sm btn-success") %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>