<div class="pull-left">
  <%= link_to("Back to index", posts_path, :class => "btn btn-primary" ) %>
</div>
<br>
<div>
  <h1> <%= @post.title %> </h1>
  <h3>
    作者：<%= @post.user.email %> |
    发表时间： <%= @post.created_at.strftime("%Y-%b-%d   %H:%M") %>
  </h3>
  <hr>
  <p><%= simple_format(@post.content) %></p>
</div>
<hr>
<h4>评论区</h4>
<h5>发表评论</h5>
<div>
  <%= simple_form_for [@post, Comment.new] do |f| %>

    <div class="group">
      <%= f.input :comment %>
    </div>

    <%= f.submit "Submit", :class => "btn btn-info", data: { disable_with: "Submitting..." } %>

  <% end %>
</div>
<div>
  <h5>评论列表</h5>
  <table class="table table-bordered">
    <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.user.email %>
        </td>
        <td>
          <%= comment.created_at.strftime("%Y-%b-%d   %H:%M") %>
        </td>
        <td>
          <%= comment.comment %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
