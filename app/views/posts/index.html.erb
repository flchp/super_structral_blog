<table class="table table-bordered">
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to(post.title, post_path(post)) %>
      </td>
      <td>
        <%= post.user.email %>
      </td>
      <td>
        <%= post.created_at.strftime("%Y-%b-%d   %H:%M") %>
      </td>
    </tr>
  <% end %>
</table>